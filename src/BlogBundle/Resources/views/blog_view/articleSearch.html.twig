{% extends '@Blog/base.html.twig' %}

{% block Article %}
    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h2 class="my-4">
            <small>Search on request « {{ inquiry }} »</small>
        </h2>

    <!-- Blog Post -->
    {% if articles %}
    {% for article in articles %}
        <div class="card mb-4">
            {#{% if article.image %}#}
                {#<img class="mt-sm-4" width="80%" src="{{ asset('uploads/images/' ~ article.image) }}" alt="Card image cap">#}
            {#{% endif %} #}
            <div class="card-body">
                <h3 class="card-title"> {{ article.title }} </h3>
                <p class="card-text">{{ article.description }}</p>
                <a href="{{ path('blog_show_route', { 'slug': article.slug }) }}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                <p>Category:
                    {% for category in article.getCategories %}
                            <a href="{{ path('blog_category_route', { 'category': category }) }}">{{ category }}</a>
                    {% endfor %}
                </p>
                Posted on {{ article.createdAt|date('F d, Y') }} by
                {% for user in article.getUsers %}
                    <a href="#">{{ user }}</a>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
    {% else %}
    {{ "nothing found, try changing request" }}
    {% endif %}
{% endblock Article%}

 {% block Search %}
     <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                     {{ form_start(form) }}
                     {{ form_errors(form) }}

                     {{ form_row(form.inquiry) }}
                     <span class="input-group-btn">
                        {{ form_row(form.submit) }}
                    </span>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
{% endblock Search %}