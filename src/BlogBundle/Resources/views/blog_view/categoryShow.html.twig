{% extends '@Blog/base.html.twig' %}

{% block Article %}
    <!-- Blog Entries Column -->
    <div class="col-md-8">

    <p class="my-4">
        Caegory: {{ categorybytitle.title }}
    </p>

    <!-- Blog Post -->

    {% for article in categorybytitle.getArticles %}
        <div class="card mb-4">
            <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title"> {{ article.title }} </h2>
                <p class="card-text">{{ article.description }}</p>
                <a href="{{ path('blog_show_route', { 'slug': article.slug }) }}" class="btn btn-primary">Read More
                    &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                    <p>Category:
                        <a href="{{ path('blog_category_route', { 'category': article.getCategories['0'] }) }}">{{ article.getCategories['0'] }}</a>
                    </p>
                Posted on {{ article.createdAt|date('F d, Y') }} by
                    <a href="#">{{ article.getUsers['0'] }}</a>
            </div>
        </div>
    {% endfor %}
{% endblock Article %}