{% extends 'base.html.twig' %}

{% block Searchform %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.inquiry) }}
    <span class="input-group-btn">
        {{ form_row(form.submit) }}
    </span>
    {{ form_end(form) }}
{% endblock Searchform %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Users</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Search on request « {{ inquiry }} »
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        {% if users %}
                            <table width="100%" class="table table-striped table-bordered table-hover"
                                   id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Firstname</th>
                                    <th>Lastname</th>
                                    <th>Login</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.firstName }}</td>
                                        <td>{{ user.lastName }}</td>
                                        <td>{{ user.login }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="">show</a>
                                                </li>
                                                <li>
                                                    <a href="">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        {% else %}
                            {{ "nothing found, try changing request" }}
                        {% endif %}
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock content %}