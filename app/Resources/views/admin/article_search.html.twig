{% extends 'base.html.twig' %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Articles</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Search on request « {{ inquiry }} »
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        {% if articles %}
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>CreatedAt</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for article in articles %}
                                <tr class="odd gradeX">
                                    <td>
                                        <a href="{{ path('article_show', { 'slug': article.slug }) }}">{{ article.id }}</a>
                                    </td>
                                    <td>{{ article.title }}</td>
                                    <td>{{ article.description }}</td>
                                    <td>{% if article.createdAt %}{{ article.createdAt|date('Y-m-d') }}{% endif %}</td>
                                    <td>
                                        {% for category in article.getCategories %}
                                            {{ category }}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% for user in article.getUsers %}
                                            {{ user }}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('article_show', { 'slug': article.slug }) }}">Show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('article_edit', { 'slug': article.slug }) }}">Edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            {{ "nothing found, try changing request" }}
                        {% endif %}
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

{% endblock content %}
